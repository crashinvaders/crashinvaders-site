                    a.btn-social-link.twit(href="https://twitter.com/crashinvaders" target="_blank" title="Twitter")
                    a.btn-social-link.fb(href="https://www.fb.com/crashinvaders/" target="_blank" title="Facebook")
                    a.btn-social-link.vk(href="https://vk.com/crashinvaders" target="_blank" title="VKontakte")
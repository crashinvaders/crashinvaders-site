                            img.thumb-icon(src="../images/icon-trashville.png")
                            div.thumb-image-dim(style="background-color: #3a4937")
                        div.feature-frame
                            p.thumb-title.small Trashville Incident
                            p.thumb-desc Slice up your monster and kick all the orcs away
                            div.thumb-links-pane

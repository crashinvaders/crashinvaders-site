                            div.thumb-image-dim(style="background-color: #434f6b")
                        div.feature-frame
                            p.thumb-title.small Fridge Party
                            p.thumb-desc Feed the hungry cats with whatever you find in households' fridges before they wake up!
                            div.thumb-links-pane
                                p.thumb-available-text Available now on:
                                div(style="display: inline-block")
                                    a.btn-app-link.appstore(
                                        target="_blank",
                                        href="https://itunes.apple.com/app/id1352761622")
                                    a.btn-app-link.android(
                                        target="_blank",
                                        href="https://play.google.com/store/apps/details?id=com.enmotivo.fridgeparty")
                                    a.btn-app-link.web(
                                        target="_blank",
                                        href="http://fridgeparty.com")
                                div.thumb-release-date-text --- 2018 ---

                    div.feature-item
                        div.thumb-image-container
                            div.cycler(data-thumb-cycle-images=
                            "../images/thumb-icarus0.png, " +
                            "../images/thumb-icarus1.png, " +
                            "../images/thumb-icarus2.png")
                            img.thumb-icon(src="../images/icon-icarus.png")
                            div.thumb-image-dim(style="background-color: #27679d")
                        div.feature-frame
                            p.thumb-title.small Flying With Icarus

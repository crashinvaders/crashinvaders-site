    body
        div.preloader-overlay
            div.preloader-content
                img.preloader-logo(src="../images/crash-logo.png")
                div.preloader-bar-frame
                    div.preloader-bar-fill

        div.site-content

            div.header-pane
                img.header-logo(src="../images/crash-logo.png")

            div.main-container
                div.ground-pile.left
                div.ground-pile.right

                div.about-pane(data-aos="fade-right" data-aos-delay="250")
                    div
                        p(style="text-align: center").
                            Hey there stranger!
                        p(style="text-align: left").
                            We are two-man game dev team full of ideas and ambitions.
                            Tinkering our own projects since 2012, we sometimes take freelance work and are
                            always open for interesting opportunities.
                        p(style="text-align: left").
                            It's so great to see you on our tiny piece of web!
                            Feel free to <a href="mailto:contact@crashinvaders.com">reach us out</a>, we would love to talk! :)
                        p(style="margin-top: 8px; text-align: right")
                            | Yours Sincerely,
                            br
                            | Crashs

                div.section-title-bg
                    div.section-title-text Our Games
                    img.section-badge(src="../images/section-badge-games.png")

                div.feature-section

                    div.feature-item
                        div.thumb-image-container
                            div.cycler(data-thumb-cycle-images=
                            "../images/thumb-getreact0.png, " +
                            "../images/thumb-getreact1.png, " +
                            "../images/thumb-getreact2.png, " +
                            "../images/thumb-getreact3.png")
                            img.thumb-icon(src="../images/icon-getreact.png")
                            div.thumb-image-dim(style="background-color: #635d88")
                        div.feature-frame
                            p.thumb-title Dashy Smash
                            p.thumb-desc Face smashing jetpack runner arcade in retro style
                            div.thumb-links-pane
                                p.thumb-available-text Available now on:
                                div(style="display: inline-block")
                                    a.btn-app-link.appstore.disabled(href="#")
                                        img.soon-badge(src="../images/soon-badge.png")
                                    a.btn-app-link.android(
                                        target="_blank",
                                        href="https://play.google.com/store/apps/details?id=com.crashinvaders.dashysmash")
                                    //a.btn-app-link.web(
                                    //    target="_blank",
                                    //    href="http://crashinvaders.com/getreact")
                                div.thumb-release-date-text --- 2023 <span class="faded">/ 2015</span> ---

                    div.feature-item
                        div.thumb-image-container
                            div.cycler(data-thumb-cycle-images=
                            "../images/thumb-jdog0.png, " +
                            "../images/thumb-jdog1.png, " +
                            "../images/thumb-jdog2.png, " +
                            "../images/thumb-jdog3.png, " +
                            "../images/thumb-jdog4.png")
                            img.thumb-icon(src="../images/icon-jdog.png")
                            div.thumb-image-dim(style="background-color: #a8853f")
                        div.feature-frame
                            p.thumb-title Jolly Pet
                            p.thumb-desc Simple yet beautiful game for your beloved pet
                            div.thumb-links-pane
                                p.thumb-available-text Available now on:
                                div(style="display: inline-block")
                                    a.btn-app-link.appstore(
                                        target="_blank",
                                        href="https://itunes.apple.com/app/id1153421262")
                                    a.btn-app-link.android(
                                        target="_blank",
                                        href="https://play.google.com/store/apps/details?id=com.crashinvaders.jollypet")
                                div.thumb-release-date-text --- 2016 ---

                    div.feature-item
                        div.thumb-image-container
                            div.cycler(data-thumb-cycle-images=
                            "../images/thumb-seven0.png, " +
                            "../images/thumb-seven1.png, " +
                            "../images/thumb-seven2.png, " +
                            "../images/thumb-seven3.png")
                            img.thumb-icon(src="../images/icon-seven.png")
                            div.thumb-image-dim(style="background-color: #4d7b93")
                        div.feature-frame
                            p.thumb-title Seven
                            p.thumb-desc One of the most popular drinking games on the mobile market
                            div.thumb-links-pane
                                p.thumb-available-text Available now on:
                                div(style="display: inline-block")
                                    a.btn-app-link.appstore(
                                        target="_blank",
                                        href="https://itunes.apple.com/app/id1097472871")
                                    a.btn-app-link.android(
                                        target="_blank",
                                        href="https://play.google.com/store/apps/details?id=com.crashinvaders.seven")
                                div.thumb-release-date-text --- 2012 ---

